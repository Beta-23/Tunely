
  <form action="/albums" method="POST">
    <div class='form-group'>
      <input type="text" name="album[name]" placeholder="Album Name" class="form-control" >
    </div>
    <div class='form-group'>
      <input type="text" name="album[artist]" placeholder="Artist" class="form-control" >
    </div>
    <div class='form-group'>
      <input type="text" name="album[release_date]" placeholder="Release Date" class="form-control" >
    </div>
    <div class='form-group'>
      <input type="text" name="album[genre]" placeholder="Genre" class="form-control" >
    </div> 
    <div class='form-group'>
      <input type="text" name="album[image]" placeholder="Image URL" class="form-control" >
    </div>       
    <div class='form-group'>
      <input type="submit" value='Create Album' class="btn btn-default">
    </div>
  </form>

