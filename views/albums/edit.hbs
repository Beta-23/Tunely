  <form action="/albums/{{album.id}}/edit?_method=PATCH" method="POST">
    <div class='form-group'>
      <input type="submit" value='Update Album' class="create_btn btn btn-success">
    </div>
    <div class='form-group'>
      <input type="text" name="name" value="{{album.name}}" placeholder="Album Name" class="form-control" >
    </div>
    <div class='form-group'>
      <input type="text" name="artist" value="{{album.artist}}" placeholder="Artist" class="form-control" >
    </div>
    <div class='form-group'>
      <input type="text" name="release_date" value="{{album.release_date}}" placeholder="Release Date" class="form-control" >
    </div>
    <div class='form-group'>
      <input type="text" name="genre" value="{{album.genre}}" placeholder="Genre" class="form-control" >
    </div> 
    <div class='form-group'>
      <input type="text" name="image" value="{{album.image}}" placeholder="Image URL" class="form-control" >
    </div>       
  </form>

